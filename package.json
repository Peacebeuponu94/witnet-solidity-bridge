{
  "name": "witnet-ethereum-bridge",
  "version": "0.4.0",
  "description": "Witnet Bridge for EVM-compatible blockchains",
  "main": "",
  "scripts": {
    "addresses": "node ./scripts/addresses.js 2>&1",
    "clean": "npm run clean:build && npm run clean:flattened",
    "clean:build": "node ./scripts/clean.js build",
    "clean:flattened": "node ./scripts/clean.js flattened",
    "compile-contracts": "truffle compile --all",
    "console": "truffle console",
    "coverage": "solidity-coverage",
    "flatten": "node ./scripts/flatten.js 2>&1",
    "flatten:witnet": "npm run clean && npm run flatten:witnet:libs && npm run flatten:witnet:proxy && npm run flatten:witnet:board",
    "flatten:witnet:libs": "npm run flatten contracts/libs/WitnetDecoderLib.sol && npm run flatten contracts/libs/WitnetParserLib.sol",
    "flatten:witnet:proxy": "npm run flatten contracts/impls/WitnetProxy.sol",
    "flatten:witnet:board": "npm run flatten:witnet:board:trustable && npm run flatten:witnet:board:trustless",
    "flatten:witnet:board:trustable": "npm run flatten contracts/impls/trustable/WitnetRequestBoardTrustableEVM.sol && npm run flatten contracts/impls/trustable/WitnetRequestBoardTrustableOVM.sol",
    "flatten:witnet:board:trustless": "npm run flatten contracts/impls/trustless/",
    "fmt:js": "eslint \"**/*.js\"",
    "fmt:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\" && solhint \"test/**/*.sol\"",
    "fmt!:js": "eslint \"**/*.js\" --fix",
    "fmt!:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix && solhint \"test/**/*.sol\" --fix",
    "fmt!": "npm run fmt!:js && npm run fmt!:sol",
    "fmt": "npm run fmt:js && npm run fmt:sol",
    "migrate": "truffle migrate --reset",
    "migrate-flattened": "node ./scripts/migrate-flattened.js 2>&1",
    "networks": "node ./scripts/networks.js 2>&1",
    "test": "truffle test"
  },
  "author": "Witnet Foundation <info@witnet.foundation>",
  "repository": {
    "type": "git",
    "url": "https://github.com/witnet/witnet-ethereum-bridge.git"
  },
  "keywords": [
    "bridge",
    "witnet",
    "ethereum"
  ],
  "license": "MIT",
  "dependencies": {
    "@eth-optimism/solc": "^0.7.6-alpha.1",
    "@openzeppelin/contracts": "3.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "0.5.5",
    "chai": "4.3.4",
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "eth-gas-reporter": "0.2.22",
    "ganache-cli": "6.12.2",
    "js-sha256": "0.9.0",
    "solhint": "3.3.4",
    "solidity-coverage": "0.7.16",
    "truffle": "5.3.1",
    "truffle-assertions": "0.9.2",
    "truffle-flattener": "https://github.com/witnet/truffle-flattener.git#single-experimental"
  }
}
